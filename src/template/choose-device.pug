- var btnText = 'Заказать'
- var btnHref = '#order-form'

section.section.choose-device#choose-device
    h2.choose-device__title.section__title Выберите
        br
        |  свою док-станцию
    .container.choose-device__b-container
        .choose-device__container
            -
            each device in dockStations
                .choose-device__device
                    .choose-device__slider-container.swiper-container
                        .swiper-wrapper.choose-device__wrapper
                            - for (var i = 0; i < 3; i++)
                                .choose-device__slide.swiper-slide
                                    img(src=device.images[i]).choose-device__slide-img
                        .choose-device__pagination.swiper-pagination
                    .choose-device__color-text Цвет
                    .choose-device__name= device.colorName
                    .choose-device__price= device.price
                    +btn(btnText, btnHref).choose-device__btn
